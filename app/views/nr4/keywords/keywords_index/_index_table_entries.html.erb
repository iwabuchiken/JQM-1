<%# @keywords.each do |keyword| %>
<% @keywords.each_with_index do |keyword, i| %>

	<% if i % 5 == 0 && i <=> 0 %>
	
		<tr>
			<td colspan="7">
				*****
			</td>
		</tr>
	
	<% end %>
  <tr>
    <td><%= keyword.id %></td>
    <td><%= keyword.name %></td>
    
    <% if keyword.category && keyword.category.genre %>
    
	    <td><%= keyword.category.genre.name %></td> 
    
    <% else %>
    
    	<td>No data</td>
    
    <% end %>
    <!-- <td><%= keyword.genre_id %></td> --> 
    <!-- <td><%#= keyword.category_id.genre_id.name %></td> -->
    
    <% if keyword.category %>
    
    	<td><%= keyword.category.name %></td>
    
    <% else %>
    
    	<td>No data</td>
    
    <% end %>
    
    <td><%= link_to 'Show', keyword %></td>
    <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
    <td><%= link_to 'Destroy', keyword, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
